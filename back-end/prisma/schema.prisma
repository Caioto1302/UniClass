generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id    String  @id @default(uuid())
  nome  String
  email String  @unique
  senha String
  ehAdm Boolean @default(false)

  chamados  Chamados[]
  Respostas Respostas[]
}

model Chamados {
  id          String   @id @default(uuid())
  usuarioId   String
  titulo      String
  descricao   String
  status      String   @default("Aberto")
  dataCriacao DateTime @default(now())

  usuarios  Usuarios    @relation(fields: [usuarioId], references: [id])
  Respostas Respostas[]
}

model Respostas {
  id        String   @id @default(uuid())
  chamadoId String
  usuarioId String
  mensagem  String
  dataEnvio DateTime @default(now())

  chamado_id Chamados @relation(fields: [chamadoId], references: [id], onDelete: Cascade)
  usuario_id Usuarios @relation(fields: [usuarioId], references: [id])
}
